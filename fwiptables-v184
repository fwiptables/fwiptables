 echo;;
 esac
 case $nftseis in
 "$NULL")
 echo
 echo "$cinco  [Without rules neftables ipv6]";
 echo
 echo -n ;;
 *)
 echo "$cinco  [With rules neftables ipv6]"
 $rutabin/ip6tables-nft -v -L INPUT
 echo
 $rutabin/ip6tables-nft -v -L OUTPUT
