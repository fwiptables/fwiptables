if [ "$mifirewall" = "fw-restore" ]; then echo -n
echo
echo "############################       english: iptables-restore: load the rules in iptables format in folder $fwruta"
echo
ls $fwruta
echo
echo
echo "folder in $fwruta"
echo
echo iptables restore with one command from above:
echo
echo with ipv4:    iptables-nft-restore or iptables-legacy-restore
echo with ipv6:    ip6tables-nft-restore or ip6tables-legacy-restore
echo
exit; fi
############################       english: fw-save: save the rules in iptables format
############################       spanish: fw-save: guarda las reglas en formato iptables
if [ "$mifirewall" = "fw-save" ]; then echo -n
echo
echo "############################       english: iptables-save: save the rules in iptables format in folder $fwruta"
echo
ls $fwruta
echo
read -r -p  "     Type the name of file to save firewall: [ file ] " archivoini ; archivofin=$(sed 's/\///g' <<< "$archivoini")
echo
echo "$fwruta/$archivofin save as nft-$fwruta legacy-$fwruta nft6-$fwruta legacy6-fwruta"
iptables-nft-save >> $fwruta/$archivofin-nft-ipv4
iptables-legacy-save >> $fwruta/$archivofin-legacy-ipv4
ip6tables-nft-save >> $fwruta/$archivofin-nft-ipv6
ip6tables-legacy-save >> $fwruta/$archivofin-legacy-ipv6
echo
exit; fi
