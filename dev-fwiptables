 $which_iptables_legacy -t mangle -v -L
 echo $ralla
 echo "$rallica [ The nftables ] [ iptables-nft ] [ MANGLE ] $ralla "
 $which_iptables_nft -t mangle -v -L
 echo $footer_option
 exit; fi
