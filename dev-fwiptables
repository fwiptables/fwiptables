####
$launch_custom $allow_output_all $allow_ipv4 $allow_legacy $which_iptables_legacy  -t filter -A OUTPUT  -j DROP &> /dev/null
$launch_custom $allow_output_all $allow_ipv6 $allow_legacy $which_ip6tables_legacy -t filter -A OUTPUT  -j DROP &> /dev/null
####
####
########################################       english: autosave of firewall to restore standard rules
########################################       english: autoguardado de firewall para recuperador de reglas estandar
####
####
#### english: iptables saved
#### spanish: iptables guardado
####
####
#### english: autosave with generic name
#### spanish: autoguardado con nombre generico
####
####
$which_iptables_nft-save > $directory_fwrecover/last-nft-ipv4
$which_iptables_legacy-save > $directory_fwrecover/last-legacy-ipv4
$which_ip6tables_nft-save > $directory_fwrecover/last-nft-ipv6
$which_ip6tables_legacy-save > $directory_fwrecover/last-legacy-ipv6
####
####
#### english: autosave with specific name
#### spanish: autoguardado con nombre especifico
####
####
if  [ $autosave_fwrecover= $NULL ] ; then $nada ;
case $second_option in
"$NULL")
$which_iptables_nft-save > $directory_fwrecover/$first_option-nft-ipv4
$which_iptables_legacy-save > $directory_fwrecover/$first_option-legacy-ipv4
$which_ip6tables_nft-save > $directory_fwrecover/$first_option-nft-ipv6
$which_ip6tables_legacy-save > $directory_fwrecover/$first_option-legacy-ipv6
;;
*)
$which_iptables_nft-save > $directory_fwrecover/$first_option-$second_option-nft-ipv4
$which_iptables_legacy-save > $directory_fwrecover/$first_option-$second_option-legacy-ipv4
$which_ip6tables_nft-save > $directory_fwrecover/$first_option-$second_option-nft-ipv6
$which_ip6tables_legacy-save > $directory_fwrecover/$first_option-$second_option-legacy-ipv6
;;
esac
fi
####
####
########################################       english: show text when active rules
########################################       spanish: muestra texto cuando activas las reglas
####
####
####  # show text head lines in all firewall #
echo $head_option
#### echo "$cincuenta"
#### echo "$cinco lauching iptables rules $cinco"
#### echo "$cincuenta"
if [ "$first_option" = "offline" ]; then $nada
echo "$cincuenta"
echo "$cinco [OK FIREWALL OFFLINE]"
exit ; else $nada ; fi
####  # show text to firewall allpermisive #
if [ "$first_option" = "allpermisive" ]; then $nada
echo "$cincuenta"
echo "$cinco [OK FIREWALL ALLPERMISIVE]"
exit ; else $nada ; fi
if [ -f "$directory_config/$second_option" ]; then $nada
echo "$cincuenta"
echo "$cinco [OK FIREWALL CUSTOM] [$second_option]"
exit ; else $nada ; fi
####  # show text to firewall [config.cfg] (show text) #
echo "$cinco  [Configured with the configuration:] [$first_option] $cinco" ;
echo "$cinco  [With the netfilter iptables firewall]  $cinco"  ;
echo "  xtables    is  $allow_legacy configured firewall "
echo "  nftables  is  $allow_nft configured firewall "
echo "  * Where at least one iptables is usually necesary"
echo "$cinco  [With the protocols IP]  $cinco" ;
echo "  ipv4 is $allow_ipv4 allowed "
echo "  ipv6 is $allow_ipv6 allowed "
echo "  * Where ipv4 is usually necesary"
echo "$cinco  [With the client ports IP]  $cinco" ;
echo "  client tcp: $client_tcp"  ;
echo "  client udp: $client_udp"  ;
echo "  * Where ports domain,ntp,bootpc are usually udp necesary"
echo "$cinco  [With the server ports IP]  $cinco" ;
echo "  server tcp: $server_tcp" ;
echo "  server udp: $server_udp" ;
echo "$cinco  [With the log server ports IP]  $cinco" ;
echo "  server tcp: $logserver_tcp" ;
echo "  server udp: $logserver_udp" ;
echo "$cinco  [With the networks configured]  $cinco" ;
echo "  ipv4 client: $net_ipv4_client And ipv4 server: $net_ipv4_server"
echo "  ipv6 client: $net_ipv6_client And ipv6 server: $net_ipv6_server"
echo "  * Where 0/0 and ::/0 are all the networks, usually necesary "
echo "$cinco  [With Others configurations]  $cinco"
if [ "$allow_input_bandwidth" = "no" ]; then echo "  Dont limit input bandwidth complete" ;
else echo "  Limit input: above $bandwidth_input kb/sec complete"; fi
if [ "$allow_output_bandwidth" = "no" ]; then echo "  Dont limit output bandwidth per ip" ;
else echo "  Limit output: above $bandwidth_output kb/sec per ip"; fi
if [ "$allow_input_maxconnect" = "no" ]; then echo "  Dont limit input numbers of connections" ;
else echo "  Limit max connections: above $maxconnect_input "; fi
if [ "$allow_output_maxconnect" = "no" ]; then echo "  Dont limit output numbers of connections" ;
else echo "  Limit max connections: above $maxconnect_output "; fi
if [ "$allow_input_all" = "no" ]; then echo "  Dont allow only output"; else echo "  Allowed only output" ; fi
if [ "$allow_input_state" = "no" ]; then echo "  Dont allow specific input state"; else echo "  Allowed input state are $input_state"; fi
if [ "$allow_output_ping" = "no" ]; then echo "  Dont allow send ping"; else echo "  Allowed send pings" ; fi
if [ "$allow_input_ping" = "no" ]; then echo "  Dont allow recive ping"; else echo "  Allowed recive pings" ; fi
if [ "$allow_forwading" = "no" ]; then  echo "  Dont allow ip forwading"; else echo "  Allowed ip forwading" ; fi
if [ "$allow_nat" = "no" ]; then  echo "  Dont allow ip nat masquerade"; else echo "  Allowed nat masquerade" ; fi
if [ "$allow_vpn" = "no" ]; then echo "  Dont allow vpn excepcional"; else  echo "  Allowed vpn servers are $vpn" ; fi
if [ "$allow_blacklist" = "no" ]; then echo "  Dont allow blacklist excepcional"; else  echo "  Allowed blacklist servers are $blacklist" ; fi
if [ "$allow_output_uid" = "no" ]; then  echo "  Dont allow uid output excepcional"; else echo "  Allowed output uid output excepcional: $output_uid , and input established " ; fi
if [ "$allow_output_gid" = "no" ]; then  echo "  Dont allow gid output excepcional"; else echo "  Allowed output gid output excepcional: $output_uid , and input established "; fi
if [ "$allow_others_protocols" = "no" ]; then  echo "  Dont allow other protocol excepcional"; else echo "  Allowed other protocol excepcional: $others_protocols" ; fi
echo "$cinco  List iptables rules with:   $fiptables list  $cinco"
echo "$cincuenta"
echo "$cinco OK FIREWALL CUSTOM [$first_option]"
echo $footer_option
####
####
####
####
#######################
####     left script
#######################
####
####
#######################         english: End of script
#######################         spanish: Fin del script
