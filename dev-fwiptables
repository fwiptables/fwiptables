####
############################## english: -gui: with second option ##############################
############################## spanish: -gui: con segunda opcion ##############################
####
####
if [ "$first_option" = "-gui" ] && [ "$second_option" != "$NULL" ] ; then echo "Graphics: Wait several seconds.." ;
case "$which_zenity" in "$NULL") echo " Install zenity to work" ; exit ;; else) ;; esac
case $second_option in
"install") zenity --forms $zenity_dimension --text="TO INSTALL without gui: run ./$fiptables-version install" 
;;
wizard-mini)
archivo=wizard-mini
cp "$defaultminicfg_eng" "/tmp/fiptables-$archivo"
zenity --text-info $zenity_dimension --filename="/tmp/fiptables-$archivo" \
--editable --title="MODIFY FILE" > "$directory_config/$second_option"
if [  -s "$directory_config/$archivo" ]; then echo $nada ; 
$fiptables -gui custom $second_option ; $fiptables -gui list ;
else rm "$directory_config/$second_option" ;
zenity --info $zenity_dimension --text "Ok. $archivo canceled"; fi
;;
wizard-full)
archivo=wizard-full
cp "$defaultfullcfg_eng" "/tmp/fiptables-$archivo"
zenity --text-info $zenity_dimension --filename="/tmp/fiptables-$archivo" \
--editable --title="MODIFY FILE" > "$directory_config/$second_option"
if [  -s "$directory_config/$archivo" ]; then echo $nada ; 
$fiptables -gui custom $second_option ; $fiptables -gui list ;
else rm "$directory_config/$second_option" ;
zenity --info $zenity_dimension --text "OK. $archivo canceled"; fi
;;
*)
fecha_temporal=$(date | sed s/\ //g)
$fiptables $second_option > /tmp/fwiptables-$fecha_temporal
zenity --text-info $zenity_dimension --title "[$fiptables gui] [$second_option]" --filename=/tmp/fwiptables-$fecha_temporal --auto-scroll
rm /tmp/fwiptables-$fecha_temporal
#### English: Other method with --forms
#### Spanish: Otro metodo con --forms
#### gui_advance=$(zenity --forms $zenity_dimension --title="[ fwiptables gui ] [ $fiptables ]" --text="$($fiptables $second_option)")
