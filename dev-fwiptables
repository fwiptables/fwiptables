#############################       spanish: ss: script de sistema, la opcion sockets
####
####
if [ "$first_option" = "ss" ]; then echo -n ;
case $which_ss in
"$NULL")
echo "$tab [Install ss command]"
;;
*)
echo "$head_option";
echo "$subhead_option"
## $which_uname -srom
echo "$tab [The ipv6 sockets]"
$which_ss -a6
echo "$tab [The ipv4 sockets]"
$which ss -a4
;;
esac
exit; fi
