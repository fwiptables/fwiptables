############################## english: -gui: Manage gui con three options  ##############################
############################## spanish: -gui: Maneja gui con tres opciones  ##############################
####
####
#### english: with third option
#### spanish: con tercera opcion
####
####
if [ "$first_option" = "-gui" ] && [ "$third_option" != "$NULL" ] ; then echo "Graphics: Wait several seconds.." ;
case "$which_zenity" in "$NULL") echo " Install zenity to work" ; exit ;; else) ;; esac
case $second_option in
"install") zenity --forms $zenity_dimension --text="TO INSTALL without gui: run ./$fiptables-version install" 
;;
"new-mini-config")
cp "$defaultminicfg_eng" "/tmp/fiptables-$third_option"
if [ -f "$directory_config/$third_option" ]; then echo $nada ;
zenity --forms $zenity_dimension --text="file $third_option exists" ; exit 
else zenity --text-info $zenity_dimension --filename="/tmp/fiptables-$third_option" \
--editable --title="MODIFY FILE" > "$directory_config/$third_option" ; fi
if [ -s "$directory_config/$third_option" ]; then echo $nada ;
zenity --forms $zenity_dimension --text="OK new file: $third_option" ; exit
else rm "$directory_config/$third_option" ; 
zenity --forms $zenity_dimension --text="Canceled new file: $third_option" ; exit; fi
;;
"new-full-config")
cp "$defaultfullcfg_eng" "/tmp/fiptables-$third_option"
if [ -f "$directory_config/$third_option" ]; then echo $nada ;
zenity --forms $zenity_dimension --text="file $third_option exists" ; exit 
else zenity --text-info $zenity_dimension --filename="/tmp/fiptables-$third_option" \
--editable --title="MODIFY FILE" > "$directory_config/$third_option" ; fi
if [ -s "$directory_config/$third_option" ]; then echo $nada ;
zenity --forms $zenity_dimension --text="OK new file: $third_option" ; exit
else rm "$directory_config/$third_option" ; 
zenity --forms $zenity_dimension --text="Canceled new file: $third_option" ; exit; fi
;;
"nueva-mini-config")
cp "$defaultminicfg_spa" "/tmp/fiptables-$third_option"
if [ -f "$directory_config/$third_option" ]; then echo $nada ;
zenity --forms $zenity_dimension --text="file $third_option exists" ; exit 
else zenity --text-info $zenity_dimension --filename="/tmp/fiptables-$third_option" \
--editable --title="MODIFY FILE" > "$directory_config/$third_option" ; fi
if [ -s "$directory_config/$third_option" ]; then echo $nada ;
zenity --forms $zenity_dimension --text="OK new file: $third_option" ; exit
else rm "$directory_config/$third_option" ; 
zenity --forms $zenity_dimension --text="Canceled new file: $third_option" ; exit; fi
;;
"nueva-completa-config")
cp "$defaultfullcfg_spa" "/tmp/fiptables-$third_option"
if [ -f "$directory_config/$third_option" ]; then echo $nada ;
zenity --forms $zenity_dimension --text="file $third_option exists" ; exit 
else zenity --text-info $zenity_dimension --filename="/tmp/fiptables-$third_option" \
--editable --title="MODIFY FILE" > "$directory_config/$third_option" ; fi
if [ -s "$directory_config/$third_option" ]; then echo $nada ;
zenity --forms $zenity_dimension --text="OK new file: $third_option" ; exit
else rm "$directory_config/$third_option" ; 
zenity --forms $zenity_dimension --text="Canceled new file: $third_option" ; exit; fi
;;
"modify-config")
if [ -f "$directory_config/$third_option" ] ; then echo $nada
else zenity --forms $zenity_dimension --text="file do not exist: $third_option" ; exit ; fi 
cp "$directory_config/$third_option" "/tmp/fiptables-$third_option"
zenity --text-info $zenity_dimension --filename="/tmp/fiptables-$third_option" \
--editable --title="MODIFY FILE" > "$directory_config/$third_option"
if [ -s "$directory_config/$third_option" ]; then echo $nada ; 
zenity --forms $zenity_dimension --text="OK. file: $third_option"
else cp "/tmp/fiptables-$third_option" "$directory_config/$third_option"
zenity --forms $zenity_dimension --text="Canceled. file: $third_option"; fi
;;
*)
fecha_temporal=$(date | sed s/\ //g) ; $fiptables $second_option $third_option > /tmp/fwiptables-$fecha_temporal
zenity --text-info $zenity_dimension --title "[$fiptables gui] [$second_option]" --filename=/tmp/fwiptables-$fecha_temporal --auto-scroll
rm /tmp/fwiptables-$fecha_temporal
#### English: Other method with --forms 
#### Spanish: Otro metodo con --forms
#### gui_advance=$(zenity --forms --title="[ fwiptables gui ] [ $fiptables ]" --text="$($fiptables $second_option $third_option)")
#### $gui_advance
;;
esac
exit; fi
