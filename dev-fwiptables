"$directory_fiptables/$fiptables") ;;
"./$fiptables") ;;
"$fiptables") ;;
*) echo "$cinco [to install / TYPE:] $zero_option install" ;;
esac
fi
####
####
##############################       english: $NULL: fwiptables launch .. for default
##############################       spanish: $NULL: fwiptables lanza .. por defecto
####
####
