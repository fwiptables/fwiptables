####
####
####
####   #### english: alias for cfg-custom to custom  #### spanish: apodo de cfg-custom para custom
if [ "$first_option" = "cfg-custom" ]; then first_option="custom" ; fi
####
####
####   #### english: the first option : [config.cfg]  ----  verbose
####   #### spanish: El primera opción: [config.cfg]  ----  con informacion
####
if [ -f "$directory_config"/"$first_option" ]; then echo $subhead_option ;
launch_iptables="si"; launch_thefirst="si"; launch_thesecond="no" ;
launch_permisive="no" ; launch_offline="no" ; launch_custom="" ;
else $nada; fi
####
####
####
####
####   #### english: The first option: offline, allpermisive or custom           ----  semi silent
####   #### spanish: El primero:       desconectado, todopermisivo o modificado  ----  semi silencioso
####
####
if [ "$first_option" = "offline" ]; then      echo "$cinco  FIREWALL OFFLINE" ; echo $subhead_option
launch_iptables="si"; launch_thesecond="si"; launch_permisive="no"; launch_offline=""   ;  launch_custom="no" ; input_all="no"  ; fi
if [ "$first_option" = "allpermisive" ]; then echo "$cinco  FIREWALL ALLPERMISIVE" ; echo $subhead_option
launch_iptables="si"; launch_thesecond="si"; launch_permisive=""  ; launch_offline="no" ;  launch_custom="no" ; input_all="no"  ; fi
if [ "$first_option" = "custom" ]; then       echo "$cinco  FIREWALL CUSTOM" ; echo $subhead_option
launch_iptables="si"; launch_thesecond="si";   launch_permisive="no" ; launch_offline="no" ; launch_custom="" ; fi
####
####
####
####
####   english: custom in first option and second option whithout existent-file.cfg
####   spanish: custom en primera opcion y segunda opcion sin existente-file.cfg
####
####
if [ ! -f $directory_config/$second_option ]; then $nada ;
case $first_option in
"custom") $fiptables cfg ;
echo "$cinco Usage: $fiptables custom existent-file-cfg"
echo "$cinco See:   $fiptables tool-cfg"
exit ;;
esac
fi
