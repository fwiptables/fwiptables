############################       spanish: log-sudo: log desde sudo
####
####
if [ "$first_option" = "log-sudo" ]; then echo -n
echo "$head_option"
echo "$subhead_option"
find /var/log -maxdepth 5 -type f | xargs zgrep -i "sudo:"
exit; fi
