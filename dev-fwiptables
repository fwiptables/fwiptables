"ipforwading-on") $fiptables -gui ipforwading-on ;;
"ipforwading-off") $fiptables -gui ipforwading-off ;;
*)
#### zenity --info $zenity_dimension --text="$fiptables good bye";
zenity --progress -$zenity_dimension --timeout=$close_timeout --text="$mensage_timeout" --auto-close --auto-kill ; exit;;
esac
$fiptables gui-menu 
exit; fi
