for one_vpn in $(echo $vpn | sed 's/,/ /g') ;
do $execlegacy  $allow_ipv4 $allow_vpn  $directory_binary/iptables-legacy -A OUTPUT -d $one_vpn -j ACCEPT &> /dev/null
done
