 if [ "$first_option" = "forward6" ]; then echo -n
 echo "$head_option" ;
echo "$subhead_option"
 echo "$tab [The xtables ipv6][iptables-legacy]"
 $which_ip6tables_legacy -v -L FORWARD
 echo "$tab  [The netftables ipv6][iptables-nft] "
 $which_ip6tables_nft -v -L FORWARD
 exit; fi
